<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/movie_id_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="#FAF6F6"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_name_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:layout_below="@+id/movie_id_row"
                android:textColor="#FAF6F6"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movie_area_code_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_name_row"
                android:paddingTop="4dp"
                android:text="Qty"
                android:textColor="#FAF7F7"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/movie_time_slot_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_area_code_row"
                android:paddingTop="4dp"
                android:text="Qty"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/movie_seats_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_time_slot_row"
                android:paddingTop="4dp"
                android:text="Qty"
                android:textColor="#FDFCFC"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/movie_phone_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_seats_row"
                android:paddingTop="4dp"
                android:text="Qty"
                android:textColor="#FDFCFC"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/movie_timing_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_phone_row"
                android:paddingTop="4dp"
                android:text="Qty"
                android:textColor="#FDFCFC"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/movie_hall_name_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_timing_row"
                android:paddingTop="4dp"
                android:text="Qty"
                android:textColor="#FDFCFC"
                android:textSize="18sp"
                android:textStyle="italic" />

<!--            <TableRow-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignBottom="@id/movie_hall_name_row"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:orientation="vertical">-->

                <Button

                    android:id="@+id/edit_Button"
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@android:drawable/ic_menu_edit" />

                <Button
                    android:layout_below="@+id/edit_Button"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/del_Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:drawable/ic_menu_delete" />


<!--            </TableRow>-->


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>